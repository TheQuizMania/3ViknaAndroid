<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".UI.MainMenuActivity">

    <TextView
        android:id="@+id/main_menu_title"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginBottom="50dp"/>
    <Button
        android:id="@+id/quick_match_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/quick_match"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/single_player_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/single_player"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/multi_player_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/multiplayer"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/matches_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/matches"
        android:textAllCaps="false"  />

    <Button
        android:id="@+id/profile_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/profile"
        android:textAllCaps="false" />
</LinearLayout>